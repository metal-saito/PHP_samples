{
    "name": "metal-saito/php-samples",
    "description": "PHP & Laravel technical samples",
    "type": "project",
    "keywords": ["php", "laravel", "samples", "portfolio"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "Tests\\": "tests/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse --memory-limit=1G",
        "quality": [
            "@test",
            "@analyse"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

